{
	"include": ["src"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dst",
		"module": "ESNext",
		"target": "ES2020",
		
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"alwaysStrict": true,

		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,

		"lib": ["ESNext"],

		"skipDefaultLibCheck": true,
	},
}